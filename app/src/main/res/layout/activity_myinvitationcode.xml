<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.midian.base.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.midian.base.widget.BaseLibTopbarView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:src="@drawable/icon_yqm"/>
        <RelativeLayout
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">
            <TextView
                android:id="@+id/tvInvitationCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="naddea"
                android:textSize="28sp"
                android:layout_centerInParent="true"/>
            <View
                android:layout_below="@+id/tvInvitationCode"
                android:layout_width="219dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/divide_line"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="复制"
                android:textSize="15sp"
                android:textColor="#FF3356"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_1pink5radius_stroke"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tvInvitationCodeDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="了解邀请码？"
            android:textColor="#767676"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            android:padding="10dp"/>
        <Button
            android:id="@+id/btnShare"
            android:layout_width="188dp"
            android:layout_height="36dp"
            android:textSize="16sp"
            android:text="分享APP"
            android:textColor="@color/white"
            android:layout_marginTop="120dp"
            android:background="@drawable/shape_20red_radiu_stroke"/>
    </LinearLayout>
</LinearLayout>