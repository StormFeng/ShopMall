<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="130dp">
        <LinearLayout
            android:id="@+id/llGoodInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/ivGood"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:src="@drawable/temp_good1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNewPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥288"
                    android:textColor="#616161"
                    android:textSize="9sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textColor="#A4A4A4"
                    android:textSize="9sp" />

                <com.lida.shopping.widget.TextViewDelete
                    android:id="@+id/tvOldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥288"
                    android:textColor="#A4A4A4"
                    android:textSize="9sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="年青草绿设计款"
                android:textColor="#818080"
                android:textSize="9sp" />
        </LinearLayout>
        <Button
            android:id="@+id/btnLookMore"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="查看\n更多"
            android:visibility="gone"
            android:textColor="#818080"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_50gray_stroke"/>
    </RelativeLayout>
</LinearLayout>