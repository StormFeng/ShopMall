<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llCItem"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <CheckBox
            android:id="@+id/cCb"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:button="@null"
            android:background="@drawable/select_check_circle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp">
            <ImageView
                android:id="@+id/ivGood"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:src="@drawable/temp_good1"
                android:layout_marginRight="6dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_reg_package"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="保税仓"
                            android:textColor="#AA22E7"
                            android:textSize="9sp" />
                        <TextView
                            android:id="@+id/tvGoodName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#535353"
                            android:textSize="13sp"
                            android:text="美国爱尔邦尼天然儿童蜂蜜"
                            android:layout_marginLeft="9dp"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="34dp">
                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="#FB103F"
                            android:textSize="12sp"
                            android:text="￥288"/>
                        <TextView
                            android:id="@+id/tvNumber"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="#403F3F"
                            android:textSize="12sp"
                            android:text="x1"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <com.lida.shopping.widget.NumberWidget
                        android:id="@+id/etNumber"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </com.lida.shopping.widget.NumberWidget>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="1dp"/>
                    <Button
                        android:id="@+id/btnDelete"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="#FE4070"
                        android:text="删除"
                        android:textSize="14sp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>